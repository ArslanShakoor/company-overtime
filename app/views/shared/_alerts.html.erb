<% flash.each do |name,msg| %>
  <script type="text/javascript">
   <% if  flash[:error]%>
     toastr['error']('there is an error');
   <%elsif flash[:alert]%>
     toastr['info']('<%= msg %>');
   <% else flash[:success]  %>
     toastr['success']('<%= msg %>');
   <% end %>  
  </script>
<% end %>  