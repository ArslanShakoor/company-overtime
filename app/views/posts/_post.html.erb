<tr>
	<td>
		<%= post.id%>
	</td>
	<td>
		<%= post.date %>
	</td>
	<td>
		<%=  post.user.full_name %>	 
	</td>
	<td>
	  <%=   truncate(post.rationale, length: 10)  %>
	</td>
	<td>
	  <%= status_label post.status %>
	</td>
	<td>
	  <%=   link_to "Edit", edit_post_path(post), id: "Edit_#{post.id}"  %>
	 
	  <%=   link_to "delete", post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index" , data: {confirm: "confirm are you sure?"} %>
	</td>
</tr>